{
  "name": "@dekuyper/solidity-template",
  "description": "Setup for writing Solidity smart contracts",
  "version": "1.0.0",
  "author": {
    "name": "Nick Oprisan",
    "url": "https://github.com/dekuyper"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.0",
    "@nomicfoundation/hardhat-ignition": "^0.15.5",
    "@nomicfoundation/ignition-core": "^0.15.5",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@nomiclabs/hardhat-waffle": "^2.0.6",
    "@openzeppelin/hardhat-upgrades": "^3.2.1",
    "@typechain/hardhat": "^2.0.0",
    "@types/chai": "^4.3.17",
    "@types/node": "^22.0.2",
    "chai": "^4.2.0",
    "cross-env": "^7.0.3",
    "ethereum-waffle": "^4.0.10",
    "hardhat": "^2.22.7",
    "hardhat-abi-exporter": "^2.0.0",
    "hardhat-contract-sizer": "^2.0.0",
    "hardhat-gas-reporter": "^1.0.0",
    "hardhat-log-remover": "^1.0.0",
    "hardhat-tracer": "^1.0.0",
    "husky": "^9.1.4",
    "solidity-coverage": "^0.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "files": [
    "/contracts"
  ],
  "keywords": [
    "blockchain",
    "ethereum",
    "hardhat",
    "smart-contracts",
    "solidity"
  ],
  "private": true,
  "scripts": {
    "clean": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat clean",
    "commit": "git-cz",
    "compile": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile",
    "coverage": "cross-env CODE_COVERAGE=true hardhat coverage --solcoverjs ./.solcover.js --temp artifacts --testfiles \"./test/**/*.ts\"",
    "deploy": "hardhat deploy:Contracts",
    "lint": "yarn lint:sol && yarn lint:ts && yarn prettier:check",
    "lint:sol": "solhint --config ./.solhint.json --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:ts": "eslint --config ./.eslintrc.yaml --ignore-path ./.eslintignore --ext .js,.ts .",
    "postinstall": "husky install",
    "prettier": "prettier --config ./.prettierrc.yaml --write \"**/*.{js,json,md,sol,ts}\"",
    "prettier:check": "prettier --check --config ./.prettierrc.yaml \"**/*.{js,json,md,sol,ts}\"",
    "test": "cross-env REPORT_GAS=true hardhat test",
    "typechain": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat typechain",
    "size": "cross-env TS_NODE_TRANSPILE_ONLY=true hardhat compile; hardhat size-contracts"
  },
  "dependencies": {
    "@multiversx/sdk-js-bridge": "^0.2.0",
    "@nomicfoundation/hardhat-ethers": "^3.0.0",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "@openzeppelin/contracts": "^5.0.2",
    "@openzeppelin/contracts-upgradeable": "^5.0.2",
    "@typechain/ethers-v6": "^0.5.0",
    "@types/mocha": ">=9.1.0",
    "dotenv": "^16.4.5",
    "esm": "^3.2.25",
    "ethers": "^6.13.2",
    "yarn": "^1.22.18"
  },
  "packageManager": "yarn@1.22.22"
}
